      <a class="navbar-brand" href="/">
        <%=image_tag("logo.jpg", :style => "width:35px;height:35px;") %>
        DarkHouse
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarText">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/">TRANG CHỦ</a></li>
          <li class="nav-item"><a class="nav-link" href="/ve-cong-ty">VỀ CÔNG TY</a></li>
          <li class="nav-item"><a class="nav-link" href="/du-an-tieu-bieu">DỰ ÁN TIÊU BIỂU</a></li>
          <li class="nav-item"><a class="nav-link" href="">TUYỂN DỤNG</a></li>
          <li class="nav-item"><a class="nav-link" href="lien-he">LIÊN HỆ</a></li>
        </ul>
      </div>
    </nav>
    <%= yield %>
    <footer class="bg-dark text-white pt-4">
      <div class="container-fluid pt-1 pb-1">
        <div class="row">
          <div class="col-12 col-md-3">
            <h5 class="text-warning"><b>VP CHÍNH TẠI VIỆT NAM</b></h5>
            <p><i class="fas fa-map-marker-alt mr-2 text-warning"></i> 392 Bach Mai street</p>
            <p><i class="fas fa-phone mr-2 text-warning"></i> 0936865068</p>
            <p><i class="fas fa-envelope mr-2 text-warning"></i> buixuanquangvinh@gmail.com</p>
          </div>
          <div class="col-12 col-md-3">
            <h5><b>VỀ CHÚNG TÔI</b></h5>
            <a class="text-primary" href="/ve-cong-ty"><p>Về công ty</p></a>
            <a class="text-primary" href="/du-an-tieu-bieu"><p>Dự án tiêu biểu</p></a>
            <a><p>Tuyển dụng</p></a>
            <a class="text-primary" href="/lien-he"><p>Liên hệ</p></a>
          </div>
          <div class="col-12 col-md-3">
            <h5><b>KẾT NỐI</b></h5>
            <a><p><span><i class="fab fa-facebook-square"></i></span> Facebook</p></a>
          </div>
          <div class="col-12 col-md-3">
          </div>
        </div>
      </div>
      <div class="container-fluid text-center p-2" style="background: rgba(0, 0, 0, 0.1)">© Copyright 2019 - <span class="text-warning">Công Ty TNHH Nội Thất DARK HOUSE</span>. Thiết kế bởi Bùi Xuân Quang Vinh</div>
    </footer>
    <div class="d-inline-block rounded-circle position-fixed" style="bottom:50px;right:20px;">
      <div class="position-relative">
        <div class="position-absolute rounded-circle w-100 h-100 ani bg-success" style="top:0;left:0;"></div>
        <a class="d-inline-block bg-success rounded-circle p-3 text-dark position-relative"  href="tel:0936865068">
          <span><i class="fas fa-phone fa-2x animated pulse infinite"></i></span>
        </a>
      </div>
      <div class="position-relative mt-4 d-none" id="top-button" style="cursor: pointer;">
        <div class="position-absolute rounded-circle w-100 h-100 ani bg-danger" style="top:0;left:0;"></div>
        <a class="d-inline-block bg-danger rounded-circle p-3 text-dark position-relative text-center" style="width:60px;height:60px">
          <span><i class="fas fa-angle-double-up fa-2x animated pulse infinite"></i></span>
        </a>
      </div>
    </div>
  </body>
  <script>
    window.onscroll = function() {scrollFunction()};
    function scrollFunction() {
      if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
        $("#top-button").addClass('d-block');
        $("#top-button").removeClass('d-none');
      } else {
        $("#top-button").addClass('d-none');
        $("#top-button").removeClass('d-block');
      }
    }

    function topFunction() {
      document.body.scrollTop = 0; // For Safari
      document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    } 

    $('#top-button').on('click',()=>{
      topFunction()
    })

  </script>
</html>

