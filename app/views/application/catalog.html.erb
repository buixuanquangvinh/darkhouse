<header class="page-header d-flex flex-column justify-content-center">
    <div class="container text-muted">
        <h1><i>Welcome To Dark House Studio!</i></h1>
        <h3>It's Nice To Meet You</h3>
    </div>
</header>
<div class="container mt-2 pb-2" style="min-height:60vh">
    <h1><%= @category.name %></h1>
    <% @news.each do |news| %>
        <div class="row">
            <div class="col-4"><%= cl_image_tag(news.image, :transformation => { :width => 400, :crop => "fit" }, :class => "w-100")  %></div>
            <div class="col-8">
                <h5><%= news.title %></h5>
                <div class="lead">
                    <span class="d-none d-md-inline"><%= news.sort_content %></span> <a href="/project/<%= news.slug %>">Read more</a>
                </div>
            </div>
        </div>
    <% end %>
</div>

