<header class="home-header d-flex flex-column justify-content-center animated fadeIn position-relative">
  <div class="container text-center text-muted animated slideInLeft delay-1s">
    <h1><i>Welcome To Dark House Studio!</i></h1>
    <h3>It's Nice To Meet You</h3>
    <a class="btn btn-outline-warning btn-lg" href="/lien-he">Tell Me More</a>
  </div>
  <div class="multiple-items bg-warning position-absolute w-100" style="bottom:0px;opacity: 0.5;">
    <% @categories.each do |category| %>
      <a href="/catalog/<%= category.slug %>">
        <div class="p-3 text-center text-white">
          <%= category.name %>
        </div>
      </a>
    <% end %>
  </div>
</header>
<div class="container pt-3 pb-3">
  <div class="row">
  <% @categories.each do |category| %>
    <div class="col-12 col-md-6 col-lg-4 mt-3">
      <a href="/catalog/<%= category.slug %>">
      <div class="card h-100">
        <%= cl_image_tag(category.image, :transformation => { :width => 600, :crop => "fit" }, :class => "card-img-top")  %>
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
          <p class="card-text"><%= category.description %></p>
        </div>
      </div>
      </a>
    </div>
  <% end %>
  </div>
</div>

<div class="multiple-project w-100">
  <% @news.each do |news| %>
    <div class="d-flex">
      <div class="overflow-hidden" style="width:60%;clip-path: polygon(0 0,0% 400%,100% 0);-webkit-clip-path:polygon(0 0,0% 400%,100% 0)">
        <%= cl_image_tag(news.image, :transformation => { :width => 1000, :crop => "fit" }, :class => "highlight-news-image w-100")  %>
      </div>
      <div class="p-3 d-flex flex-column justify-content-center" style="width:40%">
        <h2 class="d-none d-md-block"><b><span class="text-warning">DỰ ÁN</span> TIÊU BIỂU</b></h2>
        <h3 class="d-none d-md-block"><b><%= news.title %></b></h3>

        <h5 class="d-block d-md-none"><b><span class="text-warning">DỰ ÁN</span> TIÊU BIỂU</b></h5>

        <p class="d-none d-md-block text-justify"><%= news.sort_content %></p>
        <div class="text-right">
          <a href="/project/<%= news.slug %>" class="btn btn-primary text-white">Chi tiết</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $('.multiple-items').slick({
    infinite: true,
    slidesToShow: 4,
    slidesToScroll: 4,
    arrows:false,
    responsive: [{
      breakpoint: 600,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    }]
  });
  $('.multiple-project').slick({
    infinite: true,
    autoplay: true,
    slidesToShow: 1,
    slidesToScroll: 1,
    arrows:false
  });
</script>
