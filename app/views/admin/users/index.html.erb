<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
          <li class="breadcrumb-item active">Danh sách người dùng</li>
        </ol>
    </nav>
    <a href="/admin/users/new"><i class="material-icons text-primary">add_circle</i></a>
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Trạng thái</th>
            <th># bài</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td><%= user.active ? 'Active':'Inactive' %></td>
              <td class="text-center" style="width: 5%"><%= user.news_created.count %></td>
              <td class="text-center" style="width: 1%"><a href="/admin/users/<%= user.id %>"><i class="material-icons">edit</i></a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
</div>
  