<div class="container-fluid">
    <div class="row">
        <div class="col-12">
        <h2>Category edit</h2>
        <%= link_to 'Delete Category', admin_category_path(@category), method: :delete, data: { confirm: 'Delete this category ?' } %>
        <%= form_for([:admin,@category]) do |f| %>
            <div class="form-group">
                <label>Name</label>
                <%= f.text_field :name, class: "form-control", autofocus: true %>
            </div>
            <div class="form-group form-inline">
                <label>Active status</label>
                <div class="custom-control custom-switch ml-5">
                    <%= f.check_box :active, class: "custom-control-input", id: 'activeSwitch'  %>
                    <label class="custom-control-label" for="activeSwitch"></label>
                </div>
            </div>
            <div class="text-right">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        <% end %>
        </div>
    </div>
</div>
            