<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item active">Về chúng tôi</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-12">
        <h2>Về chúng tôi</h2>
        <%= form_for([:admin,@about]) do |f| %>
            <div class="form-group">
                <label>Nội dung</label>
                <%= f.text_area :content, class: "form-control", id: 'editor'  %>
            </div>
            <div class="text-right mt-2">
                <button class="btn btn-primary" type="submit">Lưu</button>
            </div>
        <% end %>
        </div>
        <div class="col-12 mt-3">
            <h2>Log</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <% @about.versions.map do |version| %>
                        <tr>
                            <td><%= version.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                            <td><%= version.event %></td>
                            <td><%= User.find(version.whodunnit).email %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    CKEDITOR.replace('editor',{ height: '500px' });
</script>
    