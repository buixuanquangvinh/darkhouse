<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/admin/categories">Danh sách bình luận</a></li>
            <li class="breadcrumb-item active">Sửa bình luận</li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-12">
        <h2>Sửa bình luận</h2>
        <%= form_for([:admin,@customer_comment]) do |f| %>
            <div class="form-group">
                <label>Tên khách hàng</label>
                <%= f.text_field :name, class: "form-control", autofocus: true %>
            </div>
            <div class="form-group">
                <label>Bình luận</label>
                <%= f.text_area :quote, class: "form-control" %>
            </div>
            <div class="form-group">
                <label>Ảnh đại diện</label>
                <button class="btn mt-1 pl-0" type="button" id="select-image-button"><i class="material-icons">camera_alt</i></button>
                <div id="image-preview">
                    <img src="<%=@customer_comment.image.thumbnail %>">
                </div>
                <%= f.hidden_field :image_cache %>
                <%= f.file_field :image, class: "form-control d-none", id: 'file-input' %>
            </div>
            <div class="text-right">
                <button class="btn btn-primary" type="submit">Lưu Comment</button>
                <%= link_to 'Xoá bình luận', admin_customer_comment_path(@customer_comment), class: "btn btn-danger text-white", method: :delete, data: { confirm: 'Delete this comment ?' } %>
            </div>
        <% end %>
        </div>
        <div class="col-12 mt-3">
            <h2>Log</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <% @customer_comment.versions.map do |version| %>
                        <tr>
                            <td><%= version.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                            <td><%= version.event %></td>
                            <td><%= User.find(version.whodunnit).email %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $('#select-image-button').on('click',()=>{
        $('#file-input').click()
    })
    $('#file-input').on('change',(e)=>{
        $('#image-preview').empty()
        let reader = new FileReader();
        reader.readAsDataURL(e.target.files[0]);
        reader.onload = function () {
            $('#image-preview').append('<img class="ml-1 mt-1" style="height:100px;width:auto" src="'+reader.result+'"/>')
        };
        reader.onerror = function (error) {
            console.log('Error: ', error);
        };
    })
</script>
            